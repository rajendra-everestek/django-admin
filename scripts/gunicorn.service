[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/lib/jenkins/workspace/Django-Admin
ExecStart=/var/lib/jenkins/workspace/Django-Admin/env/bin/gunicorn --workers 3 --log-level debug --error-logfile /var/lib/jenkins/workspace/Django-Admin/error.log --bind 0.0.0.0:8000 app.wsgi:application

[Install]
WantedBy=multi-user.target
